<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@android:color/white">

    <LinearLayout
            android:id="@+id/dialog_title_container"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:layout_gravity="center_horizontal">

        <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:scaleType="center"
                android:gravity="center_vertical|left"/>

        <TextView
                android:id="@+id/dialog_title"
                style="@style/HermesDialogWindowTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:minHeight="64dp"
                android:gravity="center_vertical|left"
                android:ellipsize="end"/>

    </LinearLayout>

    <View
            android:id="@+id/dialog_title_delimiter"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/blue_light"/>

    <LinearLayout
            android:id="@+id/dialog_content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"/>

    <LinearLayout
            android:id="@+id/dialog_buttons_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light_gray"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal">

            <TextView
                    android:id="@+id/dialog_negative_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@drawable/st_dialog_button_text_color"
                    android:visibility="gone"/>

            <View
                    android:id="@+id/dialog_button_divider"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/light_gray"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/dialog_positive_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@drawable/st_dialog_button_text_color"
                    android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>