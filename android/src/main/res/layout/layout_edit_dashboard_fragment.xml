    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView android:id="@id/drag_handle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_rearrange"
            android:scaleType="center"/>

        <ImageView android:id="@id/click_remove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_remove"
            android:scaleType="center"/>

        <ImageView android:id="@+id/edit_device_grid_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/click_remove"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sensor"/>

        <TextView android:id="@+id/edit_device_grid_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/edit_device_grid_item_icon"
            android:layout_toLeftOf="@id/drag_handle"
            android:text="sdfsdfsdfsdfsdfsdfsdfsdf"/>

        </RelativeLayout>
