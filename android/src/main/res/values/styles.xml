<resources>

    <style name="ZWayActionBar" parent="android:Theme.Holo.Light">

    </style>

    <style name="ZWaySwitchStyle">
        <!--<item name="android:thumb">@drawable/switch_thumb</item>-->
        <!--<item name="android:track">@drawable/bg_switch_focused</item>-->
        <item name="android:textOff">"Off"</item>
        <item name="android:textOn">"On"</item>
    </style>

    <style name="TabText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ZWayTabsStyle" parent="android:Widget.Holo.Tab">
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ZWayTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="FiltersRadioButton">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/sl_bg_filter_radio_btn</item>
        <item name="android:textColor">@drawable/sl_filter_radio_btn_text_selector</item>
    </style>

    <style name="HermesDialogWindowTitle" parent="android:Widget">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.DialogWindowTitle</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="TextAppearance.DialogWindowTitle" parent="android:Widget">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/blue_light</item>
    </style>



</resources>
